{
  "name": "tiketti-backend",
  "version": "1.0.0",
  "description": "Tikettijärjestelmän backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "prisma migrate deploy && node dist/index.js",
    "build": "prisma generate && tsc",
    "test": "jest",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "prisma migrate reset --force",
    "dev:setup": "npm run db:up && npm run db:reset",
    "dev:studio": "prisma studio",
    "dev:server": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "dev": "concurrently \"npm run dev:setup\" \"npm run dev:studio\" \"npm run dev:server\"",
    "clean": "npm run db:down",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "@azure/msal-node": "^3.1.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/csurf": "^1.11.5",
    "@types/helmet": "^0.0.48",
    "@types/passport": "^1.0.17",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-azure-ad": "^4.3.5",
    "pg": "^8.11.3",
    "sanitize-html": "^2.14.0",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@langchain/core": "^0.3.42",
    "@langchain/openai": "^0.4.4",
    "@prisma/client": "^6.3.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.17",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "langchain": "^0.3.19",
    "nodemon": "^3.0.3",
    "prisma": "^6.3.1",
    "ts-jest": "^29.1.1"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  }
}
